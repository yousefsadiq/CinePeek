<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.FlowPane?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cinepeek.controller.ResultsViewController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header-bar">
            <children>
                <Button fx:id="backButton" onAction="#onBack" text="← Back" styleClass="button" />
                <Label fx:id="queryLabel" styleClass="header-label" text="Results for..." />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <FlowPane fx:id="resultsBox" hgap="20.0" vgap="20.0"
                          alignment="TOP_CENTER" prefWrapLength="0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
