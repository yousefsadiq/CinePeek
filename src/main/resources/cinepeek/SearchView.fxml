<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<StackPane fx:id="rootPane" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cinepeek.controller.SearchViewController">
    <children>
        <VBox alignment="CENTER" maxWidth="500.0" spacing="20.0">
            <children>
                <ImageView fx:id="logoView" fitWidth="300" preserveRatio="true">
                    <image>
                        <Image url="@Assets/CinePeekLogo.png" />
                    </image>
                </ImageView>
                <HBox fx:id="searchBox" alignment="CENTER" styleClass="search-box">
                    <children>
                        <!-- This Label is a placeholder for your search icon -->
                        <ImageView fitWidth="15" preserveRatio="true">
                            <image>
                                <Image url="@Assets/SearchIcon.png" />
                            </image>
                        </ImageView>
                        <TextField fx:id="searchField" onAction="#onSearch" promptText="I Want To Learn More About..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                        <Button fx:id="searchButton" onAction="#onSearch" text="Search" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <StackPane fx:id="loadingPane" styleClass="loading-pane" visible="false">
            <children>
                <ProgressIndicator fx:id="loadingIndicator" />
            </children>
        </StackPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</StackPane>